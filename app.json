{
  "expo": {
    "name": "Ledgr",
    "slug": "ledgr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ledgr",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#FFF8E7"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ledgr.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture receipt photos.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to attach receipt images to expenses.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "buildNumber": "2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF6B9D"
      },
      "package": "com.ledgr.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "This app accesses your photos to attach receipts to expenses.",
          "cameraPermission": "This app uses the camera to capture receipt photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#FF6B9D"
        }
      ],
      "@react-native-community/datetimepicker",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3940256099942544~3347511713",
          "iosAppId": "ca-app-pub-3940256099942544~1458002511"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "_BEFORE_BUILD": [
      "Replace AdMob ad unit IDs in services/ads.tsx (after app is published)"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d2549269-24d4-46cf-8528-9ae9b6e6acec"
      }
    },
    "owner": "naeemsani"
  }
}
